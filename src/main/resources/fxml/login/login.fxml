<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ilcaminodelamamma.controller.LoginController"
            minWidth="600" minHeight="450"
            style="-fx-background-color: #FDE8C9;">

    <!-- Caja que centra el card -->
    <VBox alignment="CENTER" spacing="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- Card central -->
        <StackPane minWidth="400" minHeight="420" maxWidth="500" maxHeight="500"
                   style="-fx-background-color: #DDAA68; -fx-background-radius: 16;">
            <padding>
                <Insets top="35" right="35" bottom="35" left="35"/>
            </padding>

            <VBox alignment="TOP_CENTER" spacing="25">

                <!-- Logo grande centrado -->
                <VBox alignment="CENTER" spacing="15">
                    <ImageView fitWidth="120" fitHeight="120" preserveRatio="true">
                        <image>
                            <Image url="@../../img/logo.png"/>
                        </image>
                    </ImageView>
                    <Label text="INICIAR SESIÓN"
                           style="-fx-font-size: 24px; -fx-text-fill: #2C1810; -fx-font-weight: bold;"
                           alignment="CENTER"/>
                </VBox>

                <!-- Formulario -->
                <VBox spacing="20" alignment="CENTER">
                    <VBox spacing="8">
                        <Label text="Nombre Usuario:" style="-fx-text-fill: #2C1810; -fx-font-size: 14px;"/>
                        <TextField fx:id="txtUsuario" prefWidth="280" minWidth="200"
                                   promptText="Ingresa tu usuario"
                                   style="-fx-background-radius: 20; -fx-background-color: white; -fx-padding: 10 15; -fx-font-size: 14px;"/>
                    </VBox>
                    
                    <VBox spacing="8">
                        <Label text="Contraseña:" style="-fx-text-fill: #2C1810; -fx-font-size: 14px;"/>
                        <PasswordField fx:id="txtPassword" prefWidth="280" minWidth="200"
                                       promptText="Ingresa tu contraseña"
                                       style="-fx-background-radius: 20; -fx-background-color: white; -fx-padding: 10 15; -fx-font-size: 14px;"/>
                    </VBox>
                </VBox>

                <!-- Espaciador -->
                <Region VBox.vgrow="ALWAYS" minHeight="20"/>

                <!-- Botón -->
                <Button text="INICIAR SESIÓN" fx:id="btnLogin"
                        prefWidth="280" prefHeight="48" minWidth="200"
                        style="-fx-background-color: #4B311F; -fx-text-fill: #FFFFFF;
                               -fx-background-radius: 24; -fx-font-size: 15px; -fx-font-weight: bold;
                               -fx-cursor: hand;"/>

            </VBox>

        </StackPane>

    </VBox>

</AnchorPane>
