<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ilcaminodelamamma.controller.LoginController"
            prefWidth="900.0" prefHeight="550.0"
            style="-fx-background-color: #FDE8C9;">

    <!-- Caja que centra el card -->
    <VBox alignment="CENTER" spacing="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- Card central -->
        <StackPane prefWidth="450" prefHeight="380" maxWidth="450" maxHeight="380"
                   style="-fx-background-color: #DDAA68; -fx-background-radius: 12;"
                   padding="30">

            <VBox alignment="TOP_CENTER" spacing="20" prefWidth="380">

                <!-- fila logo + titulo -->
                <HBox alignment="CENTER_LEFT" spacing="10" prefWidth="360">
                    <ImageView fitWidth="48" fitHeight="48" preserveRatio="true">
                        <image>
                            <!-- Pon tu logo en: src/main/resources/img/logo.png -->
                            <Image url="@/img/logo.png"/>
                        </image>
                    </ImageView>
                    <Label text="INICIAR SESIÓN"
                           style="-fx-font-size: 20px; -fx-text-fill: #000000; -fx-font-weight: 500;"
                           alignment="CENTER"/>
                </HBox>

                <!-- Formulario -->
                <GridPane hgap="10" vgap="18" prefWidth="360">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" halignment="RIGHT"/>
                        <ColumnConstraints halignment="LEFT" percentWidth="100"/>
                    </columnConstraints>

                    <Label text="Nombre Usuario:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                           style="-fx-text-fill: #000000;"/>
                    <TextField fx:id="txtUsuario" GridPane.rowIndex="0" GridPane.columnIndex="1"
                               prefWidth="200"
                               style="-fx-background-radius: 20; -fx-background-color: white; -fx-padding: 6 10;"/>

                    <Label text="Contraseña:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                           style="-fx-text-fill: #000000;"/>
                    <PasswordField fx:id="txtPassword" GridPane.rowIndex="1" GridPane.columnIndex="1"
                                   prefWidth="200"
                                   style="-fx-background-radius: 20; -fx-background-color: white; -fx-padding: 6 10;"/>
                </GridPane>

                <!-- Botón -->
                <HBox alignment="CENTER" prefWidth="360">
                    <Button text="INICIAR SESIÓN" fx:id="btnLogin"
                            prefWidth="220" prefHeight="42"
                            style="-fx-background-color: #4B311F; -fx-text-fill: #FFFFFF;
                                   -fx-background-radius: 12; -fx-font-size: 13px; -fx-font-weight: 500;"/>
                </HBox>

            </VBox>

        </StackPane>

    </VBox>

</AnchorPane>
